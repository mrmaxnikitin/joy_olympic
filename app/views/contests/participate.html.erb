<div class='participate-page'>
	<div class="hidden-xs pinpen"></div>
	<% @tasks.each do |task| %>
		<div class='task-participate'>
			<img src= '<%= task.image %>' />
			<div class='task-body'>
				<div class='text'>
					<%= task.text %>
				</div>
				<div class='variants'>
					<p class='wrap-radio'>
						<input class="radioanswer" type="radio" name="var-ans" id="var1" value="1">
						<label for="var1"><%= task.var1 %></label>
					</p>
					<p class='wrap-radio'>
						<input class="radioanswer" type="radio" name="var-ans" id="var2" value="2">
						<label for="var2"><%= task.var2 %></label>
					</p>
					<p class='wrap-radio'>
						<input class="radioanswer" type="radio" name="var-ans" id="var3" value="3">
						<label for="var3"><%= task.var3 %></label>
					</p>
					<p class='wrap-radio'>
						<input class="radioanswer" type="radio" name="var-ans" id="var4" value="4">
						<label for="var4"><%= task.var4 %></label>
					</p>
				</div>
			</div>
			<div class='clearboth'>
			</div>
		</div>
	<% end %>
</div>

<div class='section contest-new'>
	  <h1 class='text-align-center title-on-page'>Create task</h1>
	  <%= simple_form_for([@contest, @contest.tasks.build], url: contest_tasks_path(@contest), html: { class: 'form-vertical' }) do |f| %>
	    <%= f.input :text, label: false, input_html: { placeholder: 'Текст вопроса' } %>
	    <%= f.input :var1, label: false, input_html: { placeholder: 'Вар 1' } %>
	    <%= f.input :var2, label: false, input_html: { placeholder: 'Вар 2' } %>
	    <%= f.input :var3, label: false, input_html: { placeholder: 'Вар 3' } %>
	    <%= f.input :var4, label: false, input_html: { placeholder: 'Вар 4' } %>
	    <%= f.input :answer, label: false, input_html: { placeholder: 'Ответ' } %>
	    <%= f.input :image, label: false,  input_html: { placeholder: 'Изображение (ссылка)' } %>
	    <%= f.input :background_color, label: false,  input_html: { placeholder: 'Фон (rgb или #)' } %>

	    <%= f.button :submit, "Добавить вопрос", class: 'btn btn-our btn-our-blue' %>
	  <% end %>
		<div class='clearboth'>
		</div>
</div>