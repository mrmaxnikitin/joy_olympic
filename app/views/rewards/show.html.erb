<% 
	if @reward.prize == 0
		prize = "Участник"
	else
		prize = @reward.prize.to_s + " место"
	end 
%>
<div class='slide slide-reward'>
	<% if !@reward.paid %>
		<div class='pinpen'></div>
		<div class='reward-data'>
			<img src='/diploma_samples/<%=@reward.number%>.jpg' />
			<div class='participant'>
				<h1><%= prize %></h1>
				<h2><%= @reward.name %></h2>
			</div>
			<div class='clearboth'></div>
		</div>
		<a id='buy-diploma' class='btn btn-our btn-our-green'>Приобрести этот диплом за 100 рублей</a>
		<div class='payment-form'>
			<h4>Покупка диплома</h4>
			<form action="https://money.yandex.ru/eshop.xml" method="post">
		    <input required name="shopId" value="95443" type="hidden"/>
		    <input required name="scid" value="85683" type="hidden"/>
		    <input required name="sum" value="100" type="hidden">
		    <input required name="customerNumber" type="hidden" value="<%= @reward.id %>" size="64"/><br>

		    Имя покупателя:<br>   
		    <input class='string required input-sp' name="custName" value="" size="64"/><br><br>

		    Email покупателя:<br>    
		    <input class='string required input-sp' name="custEmail" value="" size="64"/><br><br>

		    <h5>Сумма: 100 рублей</h5><br>

		    <input type="submit" value="Оплатить"> 
		  </form>
		</div>
	<% else %>
		<div class='col-3of6 ma mtl img-diploma'>
			<h1><%= prize %></h1>
			<img src='<%= @output_diploma %>' width='100%' />
		</div>
	<% end %>
</div>