@import "bootstrap-sprockets";
@import "bootstrap";


html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, font, img, ins, kbd, q, s, samp, small, strike, strong, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td {margin:0; padding:0; border:0; outline:0; font-size:100%; vertical-align:baseline; background:transparent }
ol, ul { list-style:none }
blockquote, q { quotes:none }
blockquote:before, blockquote:after, q:before, q:after { content:''; content:none }:focus { outline:0 }
.clear { clear:both; display:block; overflow:hidden; visibility:hidden; width:0; height:0 }
body{
  font-size: 14px;
  line-height: 1.62857143;
  color: #383838;
  font-weight: 300;
  cursor: default;
  font-family: "PT Sans";
}
.footer{
  margin-top: 80px;
}
.day{
  background: linear-gradient(to top, #ACD8EF, #7AC0E4);
  background-attachment: fixed;
}
.night{
  background: linear-gradient(to top, #3C83A7, #165473);
  background-attachment: fixed;
}
.clearboth{
  clear: both;
}
a{
  color: #3A9DBE;
  text-decoration: none;
}
input, textarea{
  padding: 7px;
  border-radius: 3px;
  border: 1px solid #e5e5e5;
  outline: none !important;
}
p{
  margin: 1em 0;
}
h1{
  font-size: 32px;
}
h2{
  font-size: 28px;
}
h3{
  font-size: 24px;
}
h4{
  font-size: 18px;
}
h5{
  font-size: 16px;
}
#logo{
    position: absolute;
    left: 6%;
    top: 0.85em;
    height: 4em;
    z-index: 3;
    border-radius: 6px;
    box-shadow: 1px 2px 1px rgba(68, 68, 68, 0.52);
}
.text-align-center{
  text-align: center;
}
#top-menu-nav{
  background-color: rgba(22, 22, 22, 0.8);
  border-bottom: solid 1px #708D9C;
  z-index: 2;
  color: white;
  padding-left: 12%;
  font-size: 1.1em;
  padding-top: 1.2em;
  padding-bottom: 1.2em;
  min-height: 0px;
  width: 100%;
  nav{
    a{
      padding: 0em 1em !important;
      color: #fff !important;
      cursor: pointer;
      line-height: 1em !important;
      &:hover{
        color: #ccc !important;
      }
    }
  }
}
.container{
  width: 100%;
  padding: 0px;
}
.wrap-content{
  .col{
    float: left;
    padding-left: 10px;
    padding-right: 10px;
  }
  .col-3gs{
    width: 38%;
  }
  .col-5gs{
    width: 62%;
  }
  .col-25p{
    width: 25%;
  }
  .col-20p{
    width: 20%;
  }
  .col-33p{
    width: 33.3%;
  }
  .col-50p{
    width: 50%;
  }
  .content-min600px{
    min-width: 600px;
    margin: auto;
  }
  .content-100p{
    width: 100%;
  }
  .content-80p{
    width: 80%;
  }
}


/* слайды и секции*/
.slide{
  width: 100%;
  position: relative;
  overflow: hidden;
}
.slide > img{
  width: 100%;
}
.slide-content{
  position: absolute;
  font-size: 1.4em;
}
.section{
  padding: 3em 0 1em 0;
  max-width: 1000px;
  width: 80%;
  margin: auto;
}

.title-on-page{
  color: #3A9DBE;
  margin-bottom: 30px;
}

/* кнопки */
.btn-our{
  font-weight: 700;
  color: white;
  text-decoration: none;
  padding: .8em 1em calc(.8em + 3px);
  border-radius: 3px;
  transition: 0.2s;
}
.btn-our-green{
    background: rgb(64,199,129);
    box-shadow: 0 -3px rgb(53,167,110) inset;
    &:hover{
      background: rgb(53, 167, 110);
      color: white !important;
    }
    &:active{
      background: rgb(33,147,90);
      box-shadow: 0 3px rgb(33,147,90) inset;
    }
}
.btn-our-blue{
    background: #539BB3;
    box-shadow: 0 -3px #3189A7 inset;
    &:hover{
      background: #3189A7;
      color: white !important;
    }
    &:active{
      background: #297690;
      box-shadow: 0 3px #297690 inset;
    }
}   


/* декорации */
.pinpen {
  position: absolute;
  bottom: 0;
  right: 0;
  background-image: url('/images/pin_joyacademy.png');
  background-repeat: no-repeat;
  width: 300px;
  height: 300px;
}
